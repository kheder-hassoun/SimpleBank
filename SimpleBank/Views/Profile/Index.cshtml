@model SimpleBank.Models.ApplicationUser

@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg rounded-4 border-0 animate__animated animate__fadeInUp">
                <!-- Gradient Card Header -->
                <div class="card-header bg-gradient-primary text-white py-4 rounded-top-4">
                    <div class="d-flex align-items-center justify-content-center">
                        <!-- Profile Image -->
                        <div class="me-3">
                            <img src="~/imgs/me.png" class="rounded-circle shadow" alt="User Avatar" style="width: 80px; height: 80px;">
                        </div>
                        <!-- User Info -->
                        <div>
                            <h2 class="fw-bold mb-0">Hi @Model.FirstName ❤</h2>
                            <p class="mb-0">@Model.Email</p>
                        </div>
                    </div>
                </div>

                <!-- Card Body -->
                <div class="card-body p-4">
                    <!-- User Details -->
                    <div class="mb-4">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-map-marker-alt text-primary me-3 fs-5"></i>
                            <div>
                                <p class="mb-0"><strong>City:</strong> @Model.City</p>
                            </div>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-lock text-primary me-3 fs-5"></i>
                            <div>
                                <p class="mb-0"><strong>PIN Code:</strong> @Model.PinCode</p>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-grid gap-3">
                        <a href="@Url.Action("Edit", "Profile")" class="btn btn-primary btn-lg rounded-pill py-2">
                            <i class="fas fa-edit me-2"></i>Edit Profile
                        </a>
                        <a href="@Url.Action("Logout", "Access")" class="btn btn-outline-danger btn-lg rounded-pill py-2">
                            <i class="fas fa-sign-out-alt me-2"></i>Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom Styles -->
<style>
    /* Gradient Background */
    .bg-gradient-primary {
        background: linear-gradient(135deg, #6f42c1, #3498db);
    }

    /* Card Styling */
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
    }

    /* Rounded Corners */
    .rounded-4 {
        border-radius: 1rem;
    }

    .rounded-top-4 {
        border-top-left-radius: 1rem;
        border-top-right-radius: 1rem;
    }

    /* Button Styling */
    .btn-primary {
        background-color: #6f42c1;
        border: none;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #59359a;
        transform: translateY(-2px);
    }

    .btn-outline-danger {
        border-color: #dc3545;
        color: #dc3545;
        transition: all 0.3s ease;
    }

    .btn-outline-danger:hover {
        background-color: #dc3545;
        color: white;
        transform: translateY(-2px);
    }

    /* Icon Styling */
    .fa-map-marker-alt, .fa-lock {
        color: #6f42c1;
    }
</style>
