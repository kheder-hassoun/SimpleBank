<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SimpleBank</title>

    <!-- Consolidated Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- for transactions -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
   
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body class="d-flex flex-column min-vh-100">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-gradient-primary fixed-top shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/Home/Dashboard">
                <i class="fa-solid fa-building-columns me-2"></i>SimpleBank
            </a>
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item mx-2">
                            <a class="nav-link hover-underline" href="/Profile/Index">
                                <i class="fas fa-user-circle me-2"></i>@User.Identity.Name
                            </a>
                        </li>

                        <li class="nav-item mx-2">
                            <a class="nav-link hover-underline" href="/Access/Login">
                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item mx-2">
                            <a class="nav-link hover-underline" href="/Access/Login">
                                <i class="fas fa-sign-in-alt me-2"></i>Login
                            </a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link hover-underline" href="/Access/Register">
                                <i class="fas fa-user-plus me-2"></i>Register
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-grow-1" style="padding-top: 80px;">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer mt-auto bg-gradient-primary">
 
        <div class="container py-4">
            <div class="row g-3 align-items-center">
                <div class="col-md-6 text-center text-md-start">
                    <h4 class="text-white mb-4">
                        <i class="fa-solid fa-building-columns me-2"></i>
                        <span>Simple Bank </span>
                    </h4>
                    <div class="d-flex flex-wrap justify-content-center justify-content-md-start gap-3">
                        <a href="#" class="text-white text-decoration-none hover-underline">About Us</a>
                        <a href="#" class="text-white text-decoration-none hover-underline">Careers</a>
                        <a href="#" class="text-white text-decoration-none hover-underline">Privacy Policy</a>
                    </div>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <div class="social-icons mb-4">
                        <a href="#" class="btn btn-icon btn-lg btn-outline-light rounded-circle mx-1">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="btn btn-icon btn-lg btn-outline-light rounded-circle mx-1">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="btn btn-icon btn-lg btn-outline-light rounded-circle mx-1">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                        <a href="#" class="btn btn-icon btn-lg btn-outline-light rounded-circle mx-1">
                            <i class="fab fa-instagram"></i>
                        </a>
                    </div>
                    <span class="text-white opacity-75">© 2025 SimpleBank. Developed by Kheder</span>
                </div>
            </div>
        </div>
    </footer>
    <!--for transactios -->
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery (for Validation Scripts) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <!-- Validation Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>