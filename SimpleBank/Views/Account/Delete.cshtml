@model SimpleBank.Models.Account

@{
    ViewData["Title"] = "Delete Account";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this account?</h3>

<div>
    <h4>@Model.AccountType (@Model.AccountNumber)</h4>
    <p><strong>Balance:</strong> @Model.Balance</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Account")" class="btn btn-secondary">Cancel</a>
</form>
